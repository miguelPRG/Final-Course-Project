<Page
    x:Class="ProjetoA.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjetoA"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="Titulo" Text="Vamos analisar código C#" HorizontalAlignment="Center" FontSize="100" Grid.Row="0"/>

        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,0,0,-771">
            <TextBox Name="Input" Height="690" Width="1228" PlaceholderText="Insira o código:" FontSize="48" TextWrapping="Wrap" AcceptsReturn="True"/>
            <Button Content="Submeter" Height="67" Width="165" HorizontalAlignment="Right" Margin="0,0,140,0" FontSize="30" Click="Button_Click"/>

        </StackPanel>
    </Grid>
</Page>
