<Page
    x:Class="ProjetoA.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjetoA"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <!-- Use '*' for the remaining space -->
        </Grid.RowDefinitions>

        <TextBlock x:Name="Titulo" Text="Vamos analisar código C#" HorizontalAlignment="Center" FontSize="40" Grid.Row="0" Margin="0,20"/>

        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="20">
            <TextBox Name="Input" Height="762" PlaceholderText="Insira o código:" FontSize="20" TextWrapping="Wrap"
                     FontFamily="Consolas" AcceptsReturn="True" Margin="0,0,0,20" KeyDown="Input_KeyDown"/>
           

            <Button Content="Submeter" Height="40" Width="120" HorizontalAlignment="Right" FontSize="20" Click="Button_Click" Margin="0,0,20,0"/>
        </StackPanel>
    </Grid>
</Page>
